{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "client/**/*",  // Inclure le code frontend dans le dossier client
    "server/**/*"  // Inclure le code backend dans le dossier service
  ],
  "exclude": [
    "node_modules"
  ]
}
